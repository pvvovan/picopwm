{
	"version": "0.2.0",
	"configurations": [
	    {
		"name": "Pico Debug",
		"cwd": "${workspaceRoot}/../openocd/tcl",
		"executable": "${workspaceRoot}/../build/pico_pwm.elf",
		"request": "launch",
		"type": "cortex-debug",
		"servertype": "openocd",
		"serverpath": "${workspaceRoot}/../openocd/src/openocd",
		// This may need to be arm-none-eabi-gdb depending on your system
		"gdbPath" : "/mnt/sda1/pvv/gcc/gcc-arm-none-eabi-10.3-2021.07/bin/arm-none-eabi-gdb",
		"device": "RP2040",
		"configFiles": [
		    "interface/picoprobe.cfg",
		    "target/rp2040.cfg"
		],
		"svdFile": "${workspaceRoot}/../pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
		"runToMain": true,
		// Work around for stopping at main on restart
		"postRestartCommands": [
		    "break main",
		    "continue"
		]
	    }
	]
}
